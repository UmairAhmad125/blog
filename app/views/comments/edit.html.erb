<h1>Edit Comment</h1>
 
<%= form_with model: @comment,   url: article_comment_path(@comment.article.id,@comment.id), method: "put", local: true do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>